{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build active file",
      "command": "make",
      "args": ["compile", "file=${fileBasenameNoExtension}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Clear build folder",
      "command": "rm ${workspaceFolder}/build/*",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
